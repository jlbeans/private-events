

<%= simple_form_for(@event) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :title, label: "Event Title:",input_html: { class: "text"}, wrapper: false, label_html: {class: "label"}, autofocus: true %>
    <%= f.input :description, label: "Provide a short description of this event:", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, autofocus: true %>
    <%= f.input :location, label: "Location:", input_html: { class: "text"}, wrapper: false, label_html: {class: "label"}, autofocus: true %>
    <%= f.input :date, label: "Date and Time:", as: :datetime, wrapper: false, label_html: {class: "label"}, autofocus: true%>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<%= link_to 'Cancel', events_path, class: "button is-danger" %>
<% end %>
