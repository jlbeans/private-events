<div class="container">
  <div class="section">
    <div class="title is-5">Upcoming Events</div>
    <% @events.upcoming.each do |event| %>
      <div class="box">
        <div class="media">
          <div class="media-content">
            <div class="content">
              <p><%= link_to event.title, event_path(event)%></p>
              <p><%=event.description%></p>
              <p><%=event.date%></p>
              <p><%=event.location%></p>
             </div>
           </div>
         </div>
       </div>
       <%end%>
      </div>

      <div class="section">
        <div class="title is-5">Past Events</div>
         <% @events.past.each do |event| %>
           <div class="box">
             <div class="media">
               <div class="media-content">
                 <div class="content">
                   <p><strong><%=event.title%></strong></p>
                   <p><%=event.description%></p>
                   <p><%=event.date%></p>
                   <p><%=event.location%></p>
                 </div>
               </div>
             </div>
           </div>
           <%end%>
         </div>
     </div>
